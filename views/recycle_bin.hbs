<!DOCTYPE html>
<html lang="en">
{{> header}}

<body>

  {{> logged_in_navbar email = email}}

    <div class="container">
        <h4>Deleted Visualisations</h4>
        <hr>
        <div class="row">
            {{#each list}}
            <div class="col s6">
                {{!-- <h2 class="header">{{this.name}}</h2> --}}
                <div class="card horizontal">
                    <div class="card-stacked">
                        <div class="card-content">
                            <p>Years: {{this.years}}</p>
                            <p>Type: {{this.type_of_graph}}</p>
                            <p>Metric: {{this.data_to_vis}}</p>
                            <p>Days Left: {{this.days_left}}</p>
                        </div>
                        <div class="card-action">
                            <div class="col s3"></div>
                            <div class="col s5">
                                <form action = "/restore/{{recycle_id}}" method = "post">
                                    <button id="restorevisbutton" name="restorevisbutton" class="btn btn-primary" style="background-color: indigo;"><i class="material-icons left">restore</i>Restore</button>
                                </form>
                            </div>
                        </div>
                        <div class="col s4"></div>
                    </div>                    
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <script type = "text/javascript" src = "https://code.jquery.com/jquery-2.1.1.min.js"></script>           
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  
    
</body>
</html>